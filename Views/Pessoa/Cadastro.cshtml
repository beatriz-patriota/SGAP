
@{
    ViewBag.Title = "Cadastro";
}
<script src="~/Scripts/Pessoa/Pessoa.js"></script>
<link rel="stylesheet" href="~/Content/Formulário/Formulario.css" />

<h2>Cadastro de Pessoas</h2>
<div id ="alertaVermelho" class="alert alert-danger" role="alert" style="display: none"></div>
<div id="alertaVerde" class="alert alert-success" role="alert" style=" display: none"></div>
<form id="FormCadastro">
    <fieldset id="AlunoOuProfessor">

        <legend> Tipo de cadastro</legend>
        <p>
            <label for="ddlTipo"> Escolha o tipo de cadastro: </label>
            <select id="ddlTipo" onchange="AlternarAlunoProfessor()">
                <option value="Aluno"> Aluno</option>
                <option value="Professor"> Professor</option>
            </select>
        </p>

    </fieldset>

    <fieldset id="IntUsuario">
        <legend> Dados cadastrais </legend>
        <p>
            <label for="txtNome">Nome:  </label>
            <input type="text" id="txtNome" maxlength="50" placeholder="Nome Completo" />
        </p>
        <p>
            <label for="txtTelefone "> Telefone: </label>
            <input type="text" id="txtTelefone" maxlength="20" />
        </p>
        <p>
            <label for="txtEmail "> E-mail: </label>
            <input type="text" id="txtEmail" maxlength="100" />
        </p>
        <p>
            <label for=" ">Data de Nascimento: </label>
            <input type="date" id="txtDataNascimento" />
        </p>
        <p>
            <label for="txtCpf "> CPF: </label>
            <input type="text" id="txtCpf" />
        </p>
    </fieldset>
    <div id="Professor">

        <fieldset id="Professores">
            <legend>Documentação dos professores</legend>
            <p>
                <label for="txtNumDoc ">Número do documento:</label>
                <input type="text" id="txtNumDoc" maxlength="30" />
            </p>
            <p>
                <label for=" txtTipoDoc"> Tipo de Documento: </label>
                <input type="text" id="txtTipoDoc" maxlength="20" />
            </p>
        </fieldset>
    </div>
    <fieldset id="Endereco">
        <legend>Endereço </legend>
        <p>
            <label for="txtRua">Rua: </label>
            <input type="text" id="txtRua" maxlength="50" />
        </p>
        <p>
            <label for="txtNumero"> Número: </label>
            <input type="text" id="txtNumero" maxlength="5" />
        </p>
        <p>
            <label for="txtEstado "> Estado: </label>
            <select id="txtEstado">
                <option value="RJ"> Rio de Janeiro</option>
                <option value="SP"> São Paulo</option>
            </select>
        </p>
        <p>
            <label for="txtCidade"> Cidade: </label>
            <input type="text" id="txtCidade" maxlength="50" placeholder="Sua cidade" />
        </p>

    </fieldset>
    <hr />
    <button onclick="Salvar()" type="button" class="btn btn-primary"> Enviar </button>
    <button onclick="history.go(-1)" type="button" class="btn btn-primary">Voltar</button>    
</form>
